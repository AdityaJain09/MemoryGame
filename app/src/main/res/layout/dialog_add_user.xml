<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/user_tags_hsv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@+id/add_user_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/continue_btn">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/user_tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:selectionRequired="false"
            />

    </ScrollView>



    <EditText
        android:id="@+id/search_sv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_user"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_user_btn"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/add_user_btn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintStart_toEndOf="@+id/search_sv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_sv"
        app:layout_constraintBottom_toBottomOf="@+id/search_sv"
        />

<!--    <Button-->
<!--        android:id="@+id/add_user_btn"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginEnd="16dp"-->
<!--        android:layout_marginBottom="5dp"-->
<!--        android:text="@string/search"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/search_sv"-->
<!--        />-->

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:text="@string/continue_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:id="@+id/search_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/continue_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>